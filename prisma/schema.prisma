generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id                 Int         @id @default(autoincrement())
  nombres            String
  apellidos          String
  correo_electronico String      @unique
  dni                String?      @unique
  telefono           String?
  password           String
  rol                Rol_Usuario @default(CLIENTE)
  habilitado         Boolean     @default(true)

  abogado_detalle    Abogado_Detalle?

  consultas_cliente  Consulta[]  @relation("Consultas_cliente")
  consultas_abogado  Consulta[]  @relation("Consultas_abogado")
}

model Abogado_Detalle {
  id                Int       @id @default(autoincrement())
  usuario_id        Int       @unique
  registro_nacional String    @unique
  especialidades    String[]

  usuario           Usuario   @relation(fields: [usuario_id], references: [id])
}

model Consulta {
  id                 Int      @id @default(autoincrement())
  cliente_id         Int
  abogado_id         Int
  asunto             String
  mensaje            String
  fecha_hora         DateTime  
  estado             String
  archivada          Boolean  @default(false)

  cliente            Usuario  @relation("Consultas_cliente", fields: [cliente_id], references: [id])
  abogado            Usuario  @relation("Consultas_abogado", fields: [abogado_id], references: [id])
}

enum Rol_Usuario {
  CLIENTE
  ABOGADO
}

